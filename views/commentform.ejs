<% include ./partials/header %>

<main>
    <h2 class="page-title">Leave a Comment</h2>
    <form class="form-comment" action="/posts/<%= post.postType.toLowerCase() %>pet/<%= post._id %>/comment" method="POST" enctype="">

      <!-- Comment -->
      <div class="comment-body">
        <p class="form-question">Please write your comment below:</p>
        <textarea class="text-area" name="commentBody" id="commentBody" maxlength="500" required></textarea>
        <p class="characters"><span id="left">500 </span>/ 500</p>
      </div>

      <!-- User Details -->
      <div class="user-details">
        <label for="contact-info" class="form-question comment-propmt">Please provide a way to contact you (e.g. phone, email, twitter, facebook), this will only be visible to the original poster and you.</label>
        <input id="contact-info" name="commentContact" type="text" class="form-input">
      </div>

      <button id="SubmitComment" class="form-btn submit">Add Your Comment</button>
    </form>
</main>

<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script type="text/javascript" src="../../../script.js"></script>

<% include ./partials/footer %>
