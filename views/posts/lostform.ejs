<% include ../partials/header %>
<main>
  <h2 class="page-title-pet">Tell Us About Your Pet</h2>
  <form class="form-pet" action="/api/lostpet/new" method="POST" enctype="multipart/form-data">
    <div class="checkbox-area">
      <p class="form-question question-type">What is your pet?*<br>
        <input id="DogRadio" class="radio-input" name="petChoice" value="Dog" type="radio" required>
        <label for="DogRadio" class="radio-label">Dog</label>
        <input id="CatRadio" class="radio-input" name="petChoice" value="Cat" type="radio">
        <label for="CatRadio" class="radio-label">Cat</label>
        <input id="BirdRadio" class="radio-input" name="petChoice" value="Bird" type="radio">
        <label for="BirdRadio" class="radio-label">Bird</label>
        <input id="ReptileRadio" class="radio-input" name="petChoice" value="Reptile" type="radio">
        <label for="ReptileRadio" class="radio-label">Reptile</label>
        <input id="SmMammalRadio" class="radio-input" name="petChoice" value="Small Mammal" type="radio">
        <label for="SmMammalRadio" class="radio-label">Small Mammal</label>
        <input id="OtherRadio" class="radio-input" name="petChoice" value="Other" type="radio">
        <label for="OtherRadio" class="radio-label">Other</label>
      </p>
    </div>
    <div class="other-expand hide-other">
      <label for="OtherInput" class="form-question">What is the type of your pet?</label>
      <input id="OtherInput" class="form-input" type="text" placeholder="e.g. cow, goat, etc." name="otherType"><!-- only visibile if the user selects 'Other' -->
    </div>

    <hr class="line">
    <!-- Pet Details -->
    <div class="pet-details">
      <input id="PetName" class="form-input" type="text" name="name" placeholder="Pet's Name*" required>
      <input id="PetBreed" class="form-input" type="text" name="breed" placeholder="Pet's Breed">
      <input id="PetGender" class="form-input" type="text" name="gender" placeholder="Pet's Gender">
      <input id="PetAge" class="form-input" type="text" name="age" placeholder="Pet's Age">
      <input id="PetColor" class="form-input" type="text" name="color" placeholder="Pet's color*" required>
      <hr class="line">
      <!-- chip -->
      <p class="form-question">Is your pet chipped?*
        <input id="Chipped" name="chipped" value="Yes" type="radio" required>
        <label for="Chipped">Yes</label>
        <input id="NoChip" name="chipped" value="No" type="radio">
        <label for="NoChip">No</label>
      </p>
      <div class="chip-expand hide-chip">
        <label for="ChipInput" class="form-question">What is the chip number?</label>
        <input id="ChipInput" class="general-input" type="text" name="tagInput" placeholder="chip number"> <!-- only visibile if the user selects 'Other' -->
      </div>
      <!-- tag -->
      <p class="form-question">Does your pet have a tag?*
        <input id="Tag" name="tag" value="Yes" type="radio" required>
        <label for="Tag">Yes</label>
        <input id="NoTag" name="tag" value="No" type="radio">
        <label for="NoTag">No</label>
      </p>
      <div class="tag-expand hide-tag">
        <label for="TagInput" class="form-question">What is written on the tag?</label>
        <input id="TagInput" class="general-input" type="text" name="tagInput" placeholder="Name / Phone / Address"> <!-- only visibile if the user selects 'Other' -->
      </div>
      <p class="form-question">Please list any additional details that will help in identifying your pet (Ex: physical traits, personality, collar color, etc.):</p>
      <textarea class="text-area" name="petDesc"></textarea>
      <hr class="line">
      <!-- Last Seen details -->
      <label class="form-question" for="LastSeenDate">When did you last see your pet?*</label>
      <input id="LastSeenDate" name="lostDate" type="date" required>
      <p class="form-question">Where did you last see your pet?</p>
      <input class="form-input" type="text" name="address" placeholder="Street Name/Address">
      <input class="form-input" type="text" name="city" placeholder="City">
      <input class="form-input" type="text" name="state" placeholder="State/Province*" required>
      <input class="form-input" type="text" name="zipcode" placeholder="Zip/Postal Code*" pattern="[0-9]{5}" title="Zip/Postal Code*" required>
      <p class="form-question">Describe the area you last saw your pet if possible.</p>
      <textarea id="LastSeenAreaDesc" class="text-area" name="areaDesc"></textarea>
      <hr class="line">
      <!-- Incident Details -->
      <p class="form-question">Please describe the incident in which you lost your pet</p>
      <textarea class="text-area" name="incidentDesc"></textarea>
      <!-- image -->
      <input class="photo-input" id="PetImage" name="petImage" type="file" onchange="readURL(this);" required>
      <label class="photo-label" for="PetImage">Please upload a photo of your pet*</label>
      <p class="file-name" id="FilePath">No file chosen</p>
      <img id="photo" src="" alt="" />
      <!-- tags -->
      <div>
        <label class="form-question" for="tags">Please add tags to your post for easier search</label>
        <input id="tags" class="form-input" name="tags" type="text" placeholder="e.g. dog, brown, new-york, red collar">
      </div>
      <!-- contact -->
      <div>
        <label class="form-question" for="contact">Please add your contact information*</label>
        <input id="contact" class="form-input" name="contact" type="text" placeholder="e.g. Phone, Email, Facebook, Twitter" required>
      </div>

    <button id="SubmitPost" class="form-btn submit">Submit</button>
  </div>
  <!-- flash message -->
  <% if (message && message.length > 0){ %>
    <div> <%= message %> </div>
    <% } %>
  </form>
</main>

<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script type="text/javascript" src="../../script.js"></script>
<% include ../partials/footer %>
